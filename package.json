{
  "name": "spfx-toolkit",
  "version": "1.0.0-alpha.0",
  "description": "Reusable components, hooks, and utilities for SharePoint Framework (SPFx) >= 1.21.1",
  "private": false,
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://your.repo.url/spfx-toolkit.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./components": {
      "types": "./lib/components/index.d.ts",
      "import": "./lib/components/index.js",
      "require": "./lib/components/index.js"
    },
    "./components/lazy": {
      "types": "./lib/components/lazy/index.d.ts",
      "import": "./lib/components/lazy/index.js",
      "require": "./lib/components/lazy/index.js"
    },
    "./hooks": {
      "types": "./lib/hooks/index.d.ts",
      "import": "./lib/hooks/index.js",
      "require": "./lib/hooks/index.js"
    },
    "./utils": {
      "types": "./lib/utilities/index.d.ts",
      "import": "./lib/utilities/index.js",
      "require": "./lib/utilities/index.js"
    },
    "./lib/*": "./lib/*"
  },
  "files": [
    "lib/",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "**/CssLoader.js",
    "**/context/sp-context.js"
  ],
  "engines": {
    "node": ">=18 <23"
  },
  "peerDependencies": {
    "@fluentui/react": "8.106.4",
    "@pnp/spfx-controls-react": "^3.22.0",
    "@pnp/logging": "^4.16.0",
    "@pnp/sp": "^3.20.1",
    "@pnp/queryable": "^3.20.1",
    "devextreme": "^22.2.3",
    "devextreme-react": "^22.2.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^7.45.4",
    "zustand": "^4.3.9"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/react": "^17.0.83",
    "@types/react-dom": "^17.0.25",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "clean": "gulp clean",
    "build": "gulp build",
    "build:full": "gulp buildWithPackageJson",
    "watch": "gulp watch",
    "validate": "gulp validate",
    "type-check": "tsc --noEmit",
    "version:alpha": "npm version prerelease --preid=alpha --no-git-tag-version",
    "version:beta": "npm version prerelease --preid=beta --no-git-tag-version",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "publish:alpha": "npm publish --access public --tag alpha",
    "publish:beta": "npm publish --access public --tag beta",
    "publish:latest": "npm publish --access public --tag latest",
    "prepublishOnly": "npm run build && npm run validate"
  },
  "keywords": [
    "spfx",
    "sharepoint",
    "pnp",
    "devextreme",
    "react-hook-form",
    "zustand",
    "toolkit"
  ]
}
